<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AfterSalesDetailActivity"
    android:background="@drawable/normal_background">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible">
        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="32dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical"
            android:text="@string/after_sales_details"
            android:textColor="@color/text_main"
            android:textSize="16sp" />
        <ImageButton
            android:id="@+id/service_center"
            android:layout_width="74dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="32dp"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/service_center"
            android:visibility="gone"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp">
                    <ImageView
                        android:id="@+id/icon_clock"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="16dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/clock"/>
                    <TextView
                        android:id="@+id/page_explain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_hard"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="6dp"
                        android:text="@string/after_waiting_merchant_complete"
                        android:textSize="13sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/product_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="9dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/shop_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="10dp"
                        android:clickable="true">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="9dp"
                            android:src="@mipmap/store_icon"
                            android:layout_gravity="center_vertical"
                            android:adjustViewBounds="true"
                            android:clickable="false"/>
                        <TextView
                            android:id="@+id/shop_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:textColor="@color/text_main"
                            android:singleLine="true"
                            android:layout_gravity="center_vertical"
                            android:text="三利元家具潮阳代理家具潮阳专营"
                            android:textSize="13sp"
                            android:clickable="false"/>
                        <ImageButton
                            android:id="@+id/goto_Btn"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/goto_btn"
                            android:clickable="false"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/product_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:textColor="@color/red"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/goodsCard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/image_product_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="9dp"
                            app:cardCornerRadius="6dp"
                            android:elevation="0dp">
                            <ImageView
                                android:id="@+id/image_product"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:src="@mipmap/ic_launcher" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="98dp"
                            android:layout_marginEnd="69dp"
                            app:layout_constraintLeft_toRightOf="@id/image_product_cart"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/text_product_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:layout_marginTop="4dp"
                                android:text="拓普特轮胎全自动雨伞女晴雨太阳伞防"
                                android:textColor="@color/text_main"
                                android:textStyle="bold"
                                android:textSize="13sp" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/product_option"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="18dp"
                                android:textColor="#FF777777"
                                android:maxLines="2"
                                android:text="48cm(含)-53cm(含)/黑胶全自动"
                                android:textSize="11sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/Price_N_Amount"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_main"
                                    android:layout_marginTop="2dp"
                                    android:textSize="11sp"
                                    android:text="￥" />
                                <TextView
                                    android:id="@+id/text_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_main"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginEnd="9dp"
                                    android:textStyle="bold"
                                    android:textSize="15sp"
                                    android:text="23.80" />
                            </LinearLayout>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/text_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginEnd="9dp"
                                android:layout_marginBottom="18dp"
                                android:textColor="#FF999999"
                                android:textSize="11sp"
                                android:text="x1" />
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="9dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:layout_marginEnd="9dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="9dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_soft"
                            android:textSize="12sp"
                            android:text="@string/reason_return"/>
                        <TextView
                            android:id="@+id/ReasonForReturn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:textSize="12sp"
                            android:textColor="@color/text_main"
                            android:text="不想要了"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_soft"
                            android:textSize="12sp"
                            android:text="@string/order_amount_dot"/>
                        <TextView
                            android:id="@+id/orderAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_main"
                            android:text="￥4399"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                app:layout_constraintTop_toBottomOf="@id/product_info"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_soft"
                            android:textSize="12sp"
                            android:text="@string/application_type"/>
                        <TextView
                            android:id="@+id/applicationType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:textSize="12sp"
                            android:textColor="@color/text_main"
                            android:text="退款退货"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_soft"
                            android:textSize="12sp"
                            android:text="@string/receipt_status"/>
                        <TextView
                            android:id="@+id/receiptStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:textSize="12sp"
                            android:textColor="@color/text_main"
                            android:text="已收货"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/order_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                app:layout_constraintTop_toBottomOf="@id/product_info"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="9dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="9dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_soft"
                            android:textSize="12sp"
                            android:text="@string/chargeback_number"/>
                        <TextView
                            android:id="@+id/ChargebackNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_main"
                            android:text="20220305335122244"/>
                        <TextView
                            android:id="@+id/copyBtn"
                            android:layout_width="40dp"
                            android:layout_height="18dp"
                            android:minWidth="50dp"
                            android:layout_marginStart="9dp"
                            android:gravity="center"
                            android:background="@drawable/round_gray_solid_36"
                            android:textColor="@color/text_main"
                            android:textSize="11sp"
                            android:text="@string/copy" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_soft"
                            android:textSize="12sp"
                            android:text="@string/application_time"/>
                        <TextView
                            android:id="@+id/applicationTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:textStyle="bold"
                            android:textColor="@color/text_main"
                            android:textSize="12sp"
                            android:text="2022-5-6 15:16"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottomCtr"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rectangle_border">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/close_applyBtn"
            android:layout_width="69dp"
            android:layout_height="28dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/round_gray_soft_36"
            android:textColor="#FF555555"
            android:textSize="12sp"
            android:text="@string/close_application" />
        <Button
            android:id="@+id/view_progressBtn"
            android:layout_width="69dp"
            android:layout_height="28dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/round_gray_soft_36"
            android:textColor="#FF555555"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:textSize="12sp"
            android:text="@string/view_progress" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>