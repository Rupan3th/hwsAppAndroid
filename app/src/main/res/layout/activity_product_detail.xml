<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:contentDescription='"Product Detail"'
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.hws.hwsappandroid.components.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#ccc"
                app:pageColor="#ccc"
                app:radius="4dp"
                app:slideInterval="5000"
                app:strokeColor="#ccc"
                app:strokeWidth="1dp">
            </com.hws.hwsappandroid.components.carouselview.CarouselView>
            <TableLayout
                android:id="@+id/layout_home_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:stretchColumns="0,1,2,3,4">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_border"
                android:padding="16dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="商品名称"/>
                    <TextView
                        android:id="@+id/productDetailName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="XXXXXXXXXXXX"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="24sp"
                        android:text="￥"/>
                    <TextView
                        android:id="@+id/productPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="24sp"
                        android:text="390"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                    <Button
                        android:id="@+id/SafetyAssureBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/round_white_solid"
                        android:text="安全保障"/>
                    <Button
                        android:id="@+id/ExpressDeliveryBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/round_white_solid"
                        android:text="快递发货"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_border"
                android:padding="16dp"
                android:layout_marginTop="16dp">
                <ImageView
                    android:id="@+id/storeImg"
                    android:layout_width="74dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:src="@mipmap/ic_launcher_round"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/storeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:text="和平区轮胎店" />
                    <TextView
                        android:id="@+id/Reputable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:text="信誉卖家、已缴纳保证金" />
                    <TextView
                        android:id="@+id/storeLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:text="辽宁|沈阳" />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/gotoStoreBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:contentDescription="@string/cd_arrow_icon"
                    android:paddingTop="8dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="8dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_18dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="-产品参数-" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_border"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:padding="16dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="材质："/>
                    <TextView
                        android:id="@+id/productMaterial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="XXXXX"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="材质："/>
                    <TextView
                        android:id="@+id/productBrand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="XXXXX"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="年份："/>
                    <TextView
                        android:id="@+id/productYears"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="XXXXX"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="-图文详情-" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/imageRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!--    <com.cuneytayyildiz.gestureimageview.GestureImageView-->
    <!--        android:id="@+id/view_finder"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:src="@drawable/no_result"-->
    <!--        app:gi_min_scale="0.1"-->
    <!--        app:gi_max_scale="10.0"-->
    <!--        app:gi_strict="false"/>-->

    <LinearLayout
        android:id="@+id/bottomCtr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="24dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rectangle_border">
        <LinearLayout
            android:id="@+id/serviceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="8dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/serviceImg"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/headphone"/>
            <TextView
                android:id="@+id/serviceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="客服"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/starBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="8dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/starImg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/star_back"/>
            <TextView
                android:id="@+id/starTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cartBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="8dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/cartImg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/cart"/>
            <TextView
                android:id="@+id/cartTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:textSize="12sp"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/addToCartBtn"
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:minWidth="88dp"
            android:background="@drawable/rectangle_half_round_gray"
            android:textColor="@color/white"
            android:layout_gravity="right|center"
            android:text="加入购物车" />
        <Button
            android:id="@+id/BuyNowBtn"
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:minWidth="88dp"
            android:background="@drawable/rectangle_half_round_red"
            android:textColor="@color/white"
            android:layout_gravity="right|center"
            android:text="立即购买" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/toolbar_pdt_detail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rectangle_border"
        android:visibility="invisible">
        <TextView
            android:id="@+id/toolbar_outlook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#333333"
            android:text="商品详情"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="42dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="16dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/back" />

</androidx.constraintlayout.widget.ConstraintLayout>