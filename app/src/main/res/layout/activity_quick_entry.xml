<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.QuickEntryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="212dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorLineLight">
        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="32dp">

                <ImageButton
                    android:id="@+id/circle_sns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@mipmap/circle_sns" />

                <TextView
                    android:id="@+id/notifySns"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="11dp"
                    android:background="@drawable/notify_circle"
                    android:gravity="center"
                    android:text="99"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                android:textSize="11sp"
                android:textColor="@color/text_hard"
                android:text="@string/message"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="32dp">

                <ImageButton
                    android:id="@+id/circle_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@mipmap/circle_home" />

                <TextView
                    android:id="@+id/notifyHome"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="11dp"
                    android:background="@drawable/notify_circle"
                    android:gravity="center"
                    android:text="99"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                android:textSize="11sp"
                android:textColor="@color/text_hard"
                android:text="@string/title_home"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="32dp">

                <ImageButton
                    android:id="@+id/circle_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@mipmap/circle_cart" />

                <TextView
                    android:id="@+id/notifyCart"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="11dp"
                    android:background="@drawable/notify_circle"
                    android:gravity="center"
                    android:text="99"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                android:textSize="11sp"
                android:textColor="@color/text_hard"
                android:text="@string/title_shopping_cart"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="39dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="32dp">

                <ImageButton
                    android:id="@+id/circle_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@mipmap/circle_me" />

                <TextView
                    android:id="@+id/notifyMe"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="11dp"
                    android:background="@drawable/notify_circle"
                    android:gravity="center"
                    android:text="99"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                android:textSize="11sp"
                android:textColor="@color/text_hard"
                android:text="@string/title_me"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/immediatePayBtn"
        android:layout_width="192dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="24dp"
        android:background="@drawable/round_white_gray_solid_36"
        android:textColor="@color/white"
        android:paddingBottom="6dp"
        android:textSize="14dp"
        android:text="立即支付" />

</androidx.constraintlayout.widget.ConstraintLayout>