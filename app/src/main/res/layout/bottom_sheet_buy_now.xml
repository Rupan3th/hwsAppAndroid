<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/bottom_sheet_top_round_white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher_round"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/red"
                    android:textSize="24sp"
                    android:text="￥" />
                <TextView
                    android:id="@+id/tvItemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="16dp"
                    android:textColor="@color/red"
                    android:textSize="28sp"
                    android:text="300" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:text="库存 :" />
                <TextView
                    android:id="@+id/Item_inventory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="8dp"
                    android:text="50" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:textSize="16sp"
                    android:text="已选择" />
                <TextView
                    android:id="@+id/tvItemDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:text="冬季  可拆卸 防滑..." />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="4dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginLeft="8dp"
            android:text="规格 :" />
        <com.hws.hwsappandroid.util.FlowLayout
            android:id="@+id/select_product_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp">
        </com.hws.hwsappandroid.util.FlowLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#555555"
            android:textSize="16dp"
            android:layout_marginLeft="8dp"
            android:text="数量 :" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="12dp">
            <Button
                android:id="@+id/btnMinus"
                android:layout_width="42dp"
                android:layout_height="24dp"
                android:background="@drawable/rectangle_half_round_border_l"
                android:text="-" />
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:layout_marginLeft="-1dp"
                android:layout_marginRight="-1dp"
                android:background="@drawable/rectangle_border"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvItemAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1" />
            </LinearLayout>
            <Button
                android:id="@+id/btnPlus"
                android:layout_width="42dp"
                android:layout_height="24dp"
                android:background="@drawable/rectangle_half_round_border_r"
                android:text="+" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/round_red_solid"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:text="确定" />

</LinearLayout>