<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="9dp"
    android:layout_marginEnd="9dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="9dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/shop_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:clickable="true"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/store_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:src="@mipmap/store_icon"
                android:clickable="false"
                android:adjustViewBounds="true"/>
            <TextView
                android:id="@+id/storeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="三利元家具潮阳代理家具潮阳专营"
                android:textColor="@color/text_main"
                android:clickable="false"
                android:textSize="13sp" />
            <ImageButton
                android:id="@+id/goto_Btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:clickable="false"
                app:srcCompat="@drawable/goto_btn" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="9dp"
                android:textColor="@color/price_text"
                android:textSize="11sp"
                android:text="@string/be_paid"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="12sp"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/lbl_realPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_main"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:text="@string/total"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_main"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:textSize="11sp"
                android:layout_gravity="center"
                android:text="￥"/>
            <TextView
                android:id="@+id/tv_realPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_main"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="436.00"/>
            <TextView
                android:id="@+id/order_cancel"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:textColor="@color/text_soft"
                android:layout_marginStart="16dp"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:text="@string/cancel_order"
                android:visibility="gone"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <Button
                android:id="@+id/button_3"
                android:layout_width="69dp"
                android:layout_height="28dp"
                android:background="@drawable/round_gray_soft_36"
                android:textColor="#FF555555"
                android:layout_gravity="right|center"
                android:textSize="12sp"
                android:text="@string/cancel_order" />
            <Button
                android:id="@+id/button_2"
                android:layout_width="69dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/round_gray_soft_36"
                android:textColor="#FF555555"
                android:layout_gravity="right|center"
                android:textSize="12sp"
                android:text="@string/change_address" />
            <Button
                android:id="@+id/button_1"
                android:layout_width="69dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/round_orange_stroke"
                android:textColor="@color/purple_500"
                android:layout_gravity="right|center"
                android:textSize="12sp"
                android:text="@string/to_pay" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>