<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="9dp"
    android:layout_marginStart="9dp"
    android:layout_marginEnd="9dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:src="@mipmap/store_icon"
                android:adjustViewBounds="true"/>
            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/text_main"
                android:singleLine="true"
                android:text="三利元家具潮阳代理家具潮阳专营"
                android:textSize="13sp"/>
<!--            <ImageButton-->
<!--                android:id="@+id/goto_Btn"-->
<!--                android:layout_width="24dp"-->
<!--                android:layout_height="24dp"-->
<!--                android:layout_marginStart="4dp"-->
<!--                android:background="@android:color/transparent"-->
<!--                android:scaleType="fitCenter"-->
<!--                app:srcCompat="@drawable/goto_btn" />-->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/product_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textColor="@color/red"
                android:textSize="16sp"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12sp">
            <androidx.cardview.widget.CardView
                android:id="@+id/image_product_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="9dp"
                app:cardCornerRadius="6dp"
                android:elevation="0dp">
                <ImageView
                    android:id="@+id/image_product"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="98dp"
                android:layout_marginEnd="9dp"
                app:layout_constraintLeft_toRightOf="@id/image_product_cart"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_product_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="拓普特轮胎全自动雨伞女晴雨太阳伞防"
                    android:textColor="@color/text_main"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/product_option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FF777777"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:text="48cm(含)-53cm(含)/黑胶全自动"
                    android:textSize="11sp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:id="@+id/Price_N_Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_main"
                        android:textSize="11sp"
                        android:text="￥" />
                    <TextView
                        android:id="@+id/text_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_main"
                        android:layout_marginEnd="16dp"
                        android:textSize="15sp"
                        android:text="23.80" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/minus_btn"
                        android:layout_width="26dp"
                        android:layout_height="18dp"
                        android:gravity="center"
                        android:textColor="#FF999999"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="-"/>
                    <TextView
                        android:id="@+id/text_amount"
                        android:layout_width="36dp"
                        android:layout_height="18dp"
                        android:gravity="center"
                        android:background="@drawable/round_gray_solid_2"
                        android:textColor="@color/text_main"
                        android:textSize="11sp"
                        android:text="2" />
                    <TextView
                        android:id="@+id/plus_btn"
                        android:layout_width="26dp"
                        android:layout_height="18dp"
                        android:gravity="center"
                        android:textColor="@color/text_main"
                        android:textSize="16sp"
                        android:text="+"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:text="￥"/>
            <TextView
                android:id="@+id/sum_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                android:text="47.60"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>