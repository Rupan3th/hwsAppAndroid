<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="9dp"
    android:layout_marginStart="9dp"
    android:layout_marginEnd="9dp"
    app:cardCornerRadius="9dp"
    app:cardElevation="0dp">

    <com.hws.hwsappandroid.ui.cart.SwipeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/address_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/client_info_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="44dp"
                android:orientation="vertical"
                android:visibility="visible">
                <LinearLayout
                    android:id="@+id/recipient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/client_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/text_main"
                        android:textSize="14sp"
                        android:text="猪猪侠" />
                    <TextView
                        android:id="@+id/phone_Number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/text_main"
                        android:textSize="14sp"
                        android:text="13566894789" />

                    <TextView
                        android:id="@+id/confirm_mark"
                        android:layout_width="30dp"
                        android:layout_height="15dp"
                        android:gravity="center"
                        android:background="@drawable/round_red_solid_2"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:text="@string/default_address" />

                </LinearLayout>
                <TextView
                    android:id="@+id/client_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="12sp"
                    android:textColor="#FF777777"
                    android:text="北京市朝阳区三间房乡三间房西村223号 " />
            </LinearLayout>

            <ImageView
                android:id="@+id/goto_Btn"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_gravity="right|center_vertical"
                android:translationX="-44dp"
                android:src="@mipmap/edit_btn" />

        </LinearLayout>

        <!--    <ImageView-->
        <!--        android:id="@+id/confirm_mark"-->
        <!--        android:layout_width="44dp"-->
        <!--        android:layout_height="44dp"-->
        <!--        android:src="@drawable/edit_address"-->
        <!--        android:visibility="visible"/>-->


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/delete_button"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#FFF53F3F"
                android:clickable="true">

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_centerInParent="true"-->
<!--                    android:text="@string/delete"-->
<!--                    android:textSize="13sp"-->
<!--                    android:textColor="#ffffffff"/>-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/trash" />

            </RelativeLayout>

        </LinearLayout>


    </com.hws.hwsappandroid.ui.cart.SwipeLayout>


</androidx.cardview.widget.CardView>